                                                    <option value="0"> CLIENT </option>
                                                     
                                                    </select>                 
                                                    
                                                
                            
                                                    
                                    <div class="col-lg-12 col-xs-12 mt-3 pl-0">
                                      <button type="submit" class="btn btn-blue"><i class="fa fa-check" aria-hidden="true"></i> Actualizar Rol</button>
                                     </div>
                                </div>                       
                                
                            </form>   
                         
                        
                        </table>
                    </div>
                </div>
            </div>
            
        </div>
                         
            
        </div>
    </div>
</section>


